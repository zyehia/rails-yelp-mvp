<h1>Add a Restaurant</h1>
<%= simple_form_for @restaurant do |f| %>
  <%= f.input :name %>
  <%= f.input :address %>
  <%= f.input :category, collection: %w(chinese italian japanese french belgian) %>
  <%= f.submit class: "btn btn-primary" %>
  <%= link_to "Back to restaurants", restaurants_path %>

<% end %>

